# Awesome-crawl4AI 环境配置示例
# 复制此文件为 .env 并填写实际值

# ========== 基础配置 ==========
# 项目环境
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ========== 爬虫配置 ==========
# 最大并发请求数
MAX_CONCURRENT_REQUESTS=10

# 请求超时时间（秒）
REQUEST_TIMEOUT=30

# 重试次数
MAX_RETRIES=3

# 下载延迟（秒）
DOWNLOAD_DELAY=1

# User-Agent
USER_AGENT=Awesome-crawl4AI/0.1.0 (+https://github.com/your-org/awesome-crawl4ai)

# ========== 代理配置 ==========
# 是否使用代理
USE_PROXY=false

# 代理池地址
PROXY_POOL_URL=

# 单个代理配置
HTTP_PROXY=
HTTPS_PROXY=

# ========== 浏览器配置 ==========
# 是否使用无头浏览器
USE_HEADLESS_BROWSER=false

# 浏览器类型（playwright 或 selenium）
BROWSER_TYPE=playwright

# 浏览器引擎（chromium, firefox, webkit）
BROWSER_ENGINE=chromium

# 浏览器超时（毫秒）
BROWSER_TIMEOUT=30000

# ========== 数据存储配置 ==========
# 数据库类型（sqlite, postgresql, mongodb）
DATABASE_TYPE=sqlite

# SQLite 数据库路径
SQLITE_DB_PATH=data/crawl4ai.db

# PostgreSQL 配置
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=crawl4ai
POSTGRES_USER=
POSTGRES_PASSWORD=

# MongoDB 配置
MONGO_URI=mongodb://localhost:27017/
MONGO_DB_NAME=crawl4ai

# ========== Redis 配置 ==========
# Redis 连接（用于队列和缓存）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ========== API 配置 ==========
# API 服务端口
API_PORT=8000

# API 密钥（可选）
API_KEY=

# CORS 允许的源
CORS_ORIGINS=*

# ========== AI 服务配置 ==========
# OpenAI API 配置
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# 其他 LLM 服务
ANTHROPIC_API_KEY=
COHERE_API_KEY=

# ========== 监控和日志 ==========
# 是否启用性能监控
ENABLE_MONITORING=false

# 日志文件路径
LOG_FILE_PATH=logs/crawl4ai.log

# Sentry 错误跟踪
SENTRY_DSN=

# ========== 速率限制 ==========
# 每秒最大请求数
RATE_LIMIT_PER_SECOND=5

# 每分钟最大请求数
RATE_LIMIT_PER_MINUTE=100

# ========== 内容处理 ==========
# 最大页面大小（字节）
MAX_PAGE_SIZE=10485760

# 是否启用 JavaScript 执行
ENABLE_JS_EXECUTION=true

# 页面加载等待时间（毫秒）
PAGE_LOAD_TIMEOUT=5000

# ========== 反爬虫配置 ==========
# 是否启用随机延迟
ENABLE_RANDOM_DELAY=true

# 随机延迟范围（秒）
RANDOM_DELAY_MIN=1
RANDOM_DELAY_MAX=3

# 是否轮换 User-Agent
ROTATE_USER_AGENT=true

# Cookie 存储路径
COOKIE_JAR_PATH=data/cookies.json
